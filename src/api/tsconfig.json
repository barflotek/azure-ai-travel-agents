{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "../agents/**/*",
    "../llm/**/*",
    "../database/**/*",
    "../integrations/**/*",
    "../routes/**/*"
  ],
  "exclude": [
    "node_modules",
    "../ui/**/*",
    "../tools/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}